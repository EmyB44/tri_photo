import os
import shutil
from PIL import Image

#GÃ©nÃ¨re une empreinte (hash) de l'image pour la comparer.
def dhash(image, hash_size=8):
    
    image = image.convert("L").resize((hash_size + 1, hash_size), Image.LANCZOS)
    pixels = list(image.getdata())
    difference = []
    for row in range(hash_size):
        for col in range(hash_size):
            difference.append(pixels[row * (hash_size + 1) + col] > pixels[row * (hash_size + 1) + (col + 1)])
    return ''.join(str(int(bit)) for bit in difference)

#DÃ©tecte et dÃ©place les images en doublon vers un dossier 'doublons'
def find_and_move_duplicates(directory):
    
    hashes = {}
    duplicates = []
    duplicate_folder = os.path.join(directory, "doublons")

    # CrÃ©e le dossier des doublons s'il n'existe pas
    if not os.path.exists(duplicate_folder):
        os.makedirs(duplicate_folder)

    print(f"ğŸ¯ Dossier cible : {directory}")
    print(f"ğŸ”„ Recherche dans le dossier : {directory}")

    for root, _, files in os.walk(directory):
        for filename in files:
            if filename.lower().endswith((".png", ".jpg", ".jpeg", ".gif", ".bmp")):
                filepath = os.path.join(root, filename)
                print(f"ğŸ” Analyser l'image : {filepath}")

                try:
                    with Image.open(filepath) as img:
                        img_hash = dhash(img)
                        print(f"ğŸ“¸ Hash de l'image : {img_hash}")

                    if img_hash in hashes:
                        print(f"ğŸ” Doublon trouvÃ© : {filepath}")
                        duplicates.append(filepath)
                        try:
                            shutil.move(filepath, os.path.join(duplicate_folder, filename))  # DÃ©place le fichier
                            print(f"âœ… DÃ©placÃ© : {filepath} â†’ {duplicate_folder}/{filename}")
                        except PermissionError as pe:
                            print(f"âŒ Impossible de dÃ©placer {filepath} car le fichier est utilisÃ© : {pe}")
                        except Exception as e:
                            print(f"âŒ Autre erreur avec {filepath} : {e}")
                    else:
                        hashes[img_hash] = filepath

                except Exception as e:
                    print(f"âŒ Erreur avec {filepath} : {e}")
                    continue

    if duplicates:
        print(f"\nâœ… {len(duplicates)} doublon(s) dÃ©placÃ©(s) dans '{duplicate_folder}'.")
    else:
        print("\nâœ… Aucun doublon trouvÃ©.")

    return duplicates

# ğŸ“‚ Chemin du dossier Ã  analyser personnaliser avec le votre
folder_path = r"C:\Users\...."

# ğŸ” Lancer la recherche et dÃ©placer les doublons
duplicates = find_and_move_duplicates(folder_path)
